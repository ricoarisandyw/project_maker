<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlt_listProject"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:text="Nama Project"
        android:textSize="@dimen/_15sdp"
        android:id="@+id/tv_nameProject"
        android:textStyle="bold"
        android:textColor="@color/Themes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dateViewProject"
        android:text="13-12-2017"
        android:layout_toLeftOf="@+id/tv_detailPro_Option"
        android:layout_marginRight="@dimen/_20sdp"
        android:textColor="@color/Black"
        android:textSize="@dimen/_15sdp"/>

    <TextView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:textSize="@dimen/_30sdp"
        android:gravity="clip_horizontal"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_detailPro_Option"
        android:text="@string/threeDots"/>


    <ProgressBar
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:progress="70"
        android:max="100"
        android:layout_below="@id/tv_dateViewProject"
        android:layout_marginTop="@dimen/_13sdp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressBar_project" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/progressBar_project"
        android:text=" 70%"
        android:id="@+id/txt_persenProgress"
        android:textColor="@color/Black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/tv_dateViewProject"/>

</RelativeLayout>
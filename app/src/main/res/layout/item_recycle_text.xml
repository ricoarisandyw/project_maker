<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rlt_personal_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:background="#CCCCCC"
        android:layout_above="@+id/txt_judul_personal"
        android:layout_marginTop="35dp"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_judul_personal"
        android:text="Abid Ganteng"
        android:maxWidth="100dp"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/img_profile_personal"
        android:textColor="@color/Black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_status_personal"
        android:text="Hi , I'm using ProjectManager "
        android:layout_alignParentRight="true"
        android:maxWidth="100dp"
        android:layout_toRightOf="@+id/img_profile_personal"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrabid.pro_maker.Activity.SignUpActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_sign" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_26sdp"
                android:text="Project Maker"
                android:textColor="@color/Theme"
                android:textSize="@dimen/_26sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_signup_nama"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_below="@+id/txt_judul"
                android:ems="15"
                android:hint="Your Name"
                android:textColor="@color/Theme" />

            <EditText
                android:id="@+id/et_signup_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/et_signup_nama"
                android:layout_marginTop="@dimen/_10sdp"
                android:ems="15"
                android:hint="Username"
                android:textColor="@color/Theme" />

            <EditText
                android:id="@+id/et_signup_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/et_signup_username"
                android:layout_marginTop="@dimen/_10sdp"
                android:ems="15"
                android:hint="Email"
                android:textColor="@color/Theme" />

            <EditText
                android:id="@+id/et_signup_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/et_signup_email"
                android:layout_marginTop="@dimen/_10sdp"
                android:ems="15"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/Theme" />

            <Button
                android:id="@+id/btn_signup_signup"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/et_signup_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@color/Theme"
                android:text="Register"
                android:textColor="@color/White" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

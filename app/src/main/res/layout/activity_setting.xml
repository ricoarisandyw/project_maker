<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.mrabid.pro_maker.SettingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_sign"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:id="@+id/rlt_profil"
        android:background="@color/White"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/img_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/txt_name"
            android:layout_toRightOf="@+id/img_profile"
            android:text="Wahyu Abid A"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="wahyu.abied@gmail.com"/>

        <ImageButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/btn_logOut"
            android:src="@drawable/ic_highlight_off_black_24dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</RelativeLayout>

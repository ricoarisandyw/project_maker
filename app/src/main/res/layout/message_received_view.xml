<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/img_cm"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/img_profile_received"
        android:layout_marginTop="@dimen/_5sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/Black"
        android:id="@+id/txt_name_received"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/img_profile_received"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_below="@id/txt_name_received"
        android:layout_toRightOf="@+id/img_profile_received"
        android:layout_marginRight="@dimen/_40sdp">
        <TextView
            android:id="@+id/txt_content_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_chat_received"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/White"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Aku anak yang baik, suka mencari uang dengan apapun caranya "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-40.000dp"
            android:id="@+id/txt_date_received"
            android:layout_toRightOf="@+id/txt_content_received"
            android:layout_alignBottom="@+id/txt_content_received"
            android:text="19:10"/>
    </RelativeLayout>
</RelativeLayout>
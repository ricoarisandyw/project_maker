<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/list_corp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_list_corp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/building"
            app:civ_border_color="#FF000000"
            app:civ_border_width="@dimen/_2sdp" />

        <TextView
            android:id="@+id/txt_corp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@+id/img_list_corp"
            android:text="PT. Persona"
            android:textColor="@color/Black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/prog_status_corp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_judul_personal"
            android:layout_below="@+id/txt_corp_title"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/img_list_corp"
            android:max="100"
            android:progress="77" />

        <ImageView
            android:id="@+id/img_about_corp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/ic_info_black_24dp" />

    </RelativeLayout>


</RelativeLayout>
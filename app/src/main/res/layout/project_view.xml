<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rlt_projectView"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ProjetMaker"
        android:id="@+id/txt_nameViewProject"
        android:textColor="@color/Theme"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/txt_ViewDateLine"
        android:text="13 Agustus 2017"
        android:textColor="@color/Black"
        android:textSize="@dimen/_15sdp"/>


    <ProgressBar
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:progress="80"
        android:max="100"
        android:layout_below="@id/txt_ViewDateLine"
        android:layout_marginTop="@dimen/_13sdp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressBar_Project"
        android:layout_toLeftOf="@+id/txt_persenProgressProject"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="80%"
        android:id="@+id/txt_persenProgressProject"
        android:textColor="@color/Black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/txt_ViewDateLine"/>


</RelativeLayout>